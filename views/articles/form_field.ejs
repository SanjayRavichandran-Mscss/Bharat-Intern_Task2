<div class="form-group">
    <label for="title">Title</label>
    <input style="width:95%;" required value="<%=article.title%>" type="text" name="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea  style="width:95%;" name="description" id="description" class="form-control" ><%-article.description%></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea style="width:95%;" required name="markdown" id="markdown" class="form-control"><%-article.markdown%> </textarea>
</div>
<br>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
